<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/unit_tracking_img2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_camion_gris"
        android:stateListAnimator="@null"
        app:civ_border_color="@color/colorBorderCarGreen"
        app:civ_border_width="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_unit_name_single_rv"
        android:textColor="@color/blackUI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:text="Sin datos"
        app:layout_constraintStart_toEndOf="@+id/unit_tracking_img2"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/txt_unit_rute_single_rv"
        android:textColor="@color/blackUI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="13dp"
        android:text="Sin datos"
        app:layout_constraintEnd_toStartOf="@+id/guidelineusc"
        app:layout_constraintStart_toEndOf="@+id/txt_unit_name_single_rv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_percent_single_rv"
        android:textColor="@color/blackUI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Sin datos"
        app:layout_constraintStart_toEndOf="@+id/unit_tracking_img2"
        app:layout_constraintTop_toBottomOf="@+id/txt_unit_name_single_rv" />

    <TextView
        android:id="@+id/txt_unit_distance_single_rv"
        android:textColor="@color/blackUI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sin datos"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/txt_percent_single_rv"
        app:layout_constraintTop_toBottomOf="@+id/txt_unit_rute_single_rv"/>

    <TextView
        android:id="@+id/txt_unit_geo_reference_single_rv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="80dp"
        android:gravity="center"
        android:lines="3"
        android:text="Sin datos"
        android:textColor="@color/blackUI"
        app:layout_constraintBottom_toTopOf="@+id/guidelineusc2"
        app:layout_constraintEnd_toStartOf="@+id/guidelineusc"
        app:layout_constraintStart_toStartOf="@+id/guidelineusc3"
        app:layout_constraintTop_toBottomOf="@+id/txt_unit_distance_single_rv" />

    <ImageView
        android:id="@+id/optionspoints"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="351dp"
        android:layout_gravity="center"
        android:layout_marginTop="46dp"
        android:background="@drawable/ic_icn_masopciones"
        app:layout_constraintEnd_toStartOf="@+id/guidelineusc"
        app:layout_constraintStart_toStartOf="@+id/guidelineusc3"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineusc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineusc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineusc3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".0" />

</androidx.constraintlayout.widget.ConstraintLayout>