<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".z_version2.MenuFragments.UnitAssignSupport.UnitAssignSupportFragment">

    <include
        android:id="@+id/toolbar_unit_assign_support"
        layout="@layout/toolbar_unit_assign" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_units_assign"
        android:layout_marginTop="8dp"
        android:paddingBottom="60dp"

        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/toolbar_unit_assign_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</androidx.constraintlayout.widget.ConstraintLayout>